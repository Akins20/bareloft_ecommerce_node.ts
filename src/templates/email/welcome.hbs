        }
        
        .welcome-section p {
            color: #4a5568;
            font-size: 18px;
            line-height: 1.6;
        }
        
        .features-section {
            margin: 40px 0;
        }
        
        .features-section h3 {
            color: #1a202c;
            font-size: 20px;
            margin-bottom: 24px;
            text-align: center;
        }
        
        .feature-item {
