            margin-bottom: 20px;
            padding: 16px;
            background-color: #f7fafc;
            border-radius: 8px;
            border-left: 4px solid #007cba;
        }
        
        .feature-item.success {
            border-left-color: #38a169;
        }
        
        .feature-item.accent {
            border-left-color: #ed8936;
        }
        
        .feature-title {
            font-size: 16px;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 4px;
        }
        
        .feature-description {
            font-size: 14px;
            color: #4a5568;
        }
        
        .cta-section {
            text-align: center;
            margin: 40px 0;
        }
        
        .cta-button {
            display: inline-block;
            background: linear-gradient(135deg, #007cba 0%, #005a8b 100%);
            color: white;
            padding: 16px 32px;
            text-decoration: none;
            border-radius: 8px;
            font-weight: 600;
            font-size: 16px;
            text-align: center;
            transition: transform 0.2s ease;
        }
        
        .cta-button:hover {
            transform: translateY(-2px);
        }
        
        .info-box {
