            border-top: 1px solid #e2e8f0;
            padding-top: 24px;
            margin-top: 32px;
        }
        
        .support-section p {
            color: #718096;
            font-size: 13px;
            line-height: 1.5;
            margin: 0;
        }
        
        .support-section a {
            color: #007cba;
            text-decoration: none;
        }
        
        .footer {
