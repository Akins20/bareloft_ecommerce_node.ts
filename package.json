{
    "name": "bareloft-api",
    "version": "1.0.0",
    "description": "Bareloft E-commerce Platform Backend API - Nigerian Market Optimized",
    "main": "dist/server.js",
    "scripts": {
        "build": "npm run clean && npm run db:generate && npm run db:migrate:prod && npm run docs:generate && tsc",
        "build:dev": "npm run clean && npm run db:generate && npm run db:migrate && npm run db:seed && npm run docs:generate && tsc",
        "start": "node dist/server.js",
        "dev": "nodemon src/server.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testPathPattern=integration",
        "test:e2e": "jest --testPathPattern=e2e",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "type-check": "tsc --noEmit",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:migrate:prod": "prisma migrate deploy",
        "db:seed": "tsx src/database/seeds/index.ts",
        "db:reset": "prisma migrate reset --force",
        "db:studio": "prisma studio",
        "docs:generate": "swagger-jsdoc -d swagger.config.json -o swagger.json 'src/routes/**/*.ts'",
        "docs:serve": "swagger-ui-serve swagger.json",
        "clean": "rimraf dist"
    },
    "keywords": [
        "ecommerce",
        "nigeria",
        "typescript",
        "express",
        "prisma",
        "paystack"
    ],
    "author": "Bareloft Development Team",
    "license": "PROPRIETARY",
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "axios": "^1.6.2",
        "bcryptjs": "^2.4.3",
        "cloudinary": "^1.41.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cron": "^3.1.6",
        "dotenv": "^16.3.1",
        "exceljs": "^4.4.0",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "firebase-admin": "^13.4.0",
        "handlebars": "^4.7.8",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "isomorphic-dompurify": "^2.25.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.29.4",
        "moment-timezone": "^0.5.43",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^5.1.5",
        "nodemailer": "^6.9.7",
        "pdfkit": "^0.17.1",
        "redis": "^4.6.11",
        "sharp": "^0.34.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "tsconfig-paths": "^4.2.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^5.0.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/exceljs": "^0.5.3",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.8",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^6.4.14",
        "@types/pdfkit": "^0.17.2",
        "@types/supertest": "^2.0.16",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/uuid": "^9.0.7",
        "@types/validator": "^13.15.2",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.0",
        "prisma": "^5.22.0",
        "rimraf": "^5.0.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    }
}
