# .env.example - Environment Variables Template

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/bareloft_dev"
DB_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_TTL=3600

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-minimum-32-characters"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-minimum-32-characters"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Paystack Configuration (Nigerian Payment Gateway)
PAYSTACK_SECRET_KEY="sk_test_your_secret_key_here"
PAYSTACK_PUBLIC_KEY="pk_test_your_public_key_here"
PAYSTACK_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# File Upload Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"
MAX_FILE_SIZE=5242880

# Email Configuration (SendGrid)
SENDGRID_API_KEY="SG.your_sendgrid_api_key_here"
FROM_EMAIL="noreply@bareloft.com"
FROM_NAME="Bareloft"

# SMS Configuration (Nigerian SMS Provider)
SMS_API_KEY="your_sms_api_key_here"
SMS_SENDER_ID="Bareloft"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN="your_sentry_dsn_here"

# Test Database (for running tests)
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/bareloft_test"