  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Generate unique guest session ID if not set",
          "if (!pm.collectionVariables.get('guestSessionId')) {",
          "  pm.collectionVariables.set('guestSessionId', 'guest-session-' + Date.now());",
          "}",
          "",
          "// Auto-set Nigerian context headers",
          "pm.request.headers.add({",
          "  key: 'X-Country',",
          "  value: 'NG'",
          "});",
          "",
          "pm.request.headers.add({",
          "  key: 'X-Currency', ", 
          "  value: 'NGN'",
          "});",
          "",
          "pm.request.headers.add({",
          "  key: 'X-Timezone',",
          "  value: 'Africa/Lagos'",
          "});"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-extract bearer token from auth responses",
          "if (pm.response.code === 200 && pm.request.url.path.includes('verify-otp')) {",
          "  const responseJson = pm.response.json();",
          "  if (responseJson.data && responseJson.data.token) {",
          "    pm.collectionVariables.set('bearerToken', responseJson.data.token);",
          "    console.log('Bearer token extracted and saved');",
          "  }",
          "}",
          "",
          "// Validate Nigerian-specific responses",
          "pm.test('Response contains Nigerian context', function () {",
          "  const responseJson = pm.response.json();",
          "  if (responseJson.data) {",
          "    // Check for Nigerian currency",
          "    if (responseJson.data.currency) {",
          "      pm.expect(responseJson.data.currency).to.equal('NGN');",
          "    }",
          "    // Check for Nigerian phone format in responses",
          "    if (responseJson.data.phoneNumber) {",
          "      pm.expect(responseJson.data.phoneNumber).to.match(/^\\+234[789][01]\\d{8}$/);",
          "    }",
          "  }",
          "});",
          "",
          "// Performance monitoring",
          "pm.test('Response time is acceptable', function () {",
          "  pm.expect(pm.response.responseTime).to.be.below(3000); // 3 seconds max",
          "});",
          "",
          "pm.test('Response has success indicator', function () {",
          "  const responseJson = pm.response.json();",
          "  pm.expect(responseJson).to.have.property('success');",
          "});"
        ]
      }
    }
  ]
