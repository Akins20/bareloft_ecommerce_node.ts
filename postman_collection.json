{
  "info": {
    "name": "Bareloft Nigerian E-commerce API",
    "description": "Complete API collection for testing the Bareloft Nigerian e-commerce platform with all endpoints, authentication, and Nigerian-specific features",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{bearerToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3007",
      "type": "string"
    },
    {
      "key": "guestSessionId",
      "value": "guest-session-{{$randomUUID}}",
      "type": "string"
    },
    {
      "key": "bearerToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîê Authentication",
      "item": [
        {
          "name": "Request OTP (Login/Signup)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+2348012345678\",\n  \"purpose\": \"login\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/request-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "request-otp"]
            },
            "description": "Request OTP for Nigerian phone number authentication"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST", 
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+2348012345678\",\n  \"code\": \"123456\",\n  \"purpose\": \"login\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "auth", "verify-otp"]
            },
            "description": "Verify OTP and get JWT token"
          }
        }
      ]
    },
